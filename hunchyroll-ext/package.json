{
  "name": "hunchyroll-ext",
  "description": "Enjoy Crunchyroll with Hungarian subtitles on supported episodes.",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "wxt",
    "dev:firefox": "wxt -b firefox",
    "build": "wxt build && wxt build -b firefox",
    "build:watch": "nodemon --watch src --watch wxt.config.ts -e js,ts,svelte,html,css --exec npm run build",
    "build:chrome": "wxt build",
    "build:firefox": "wxt build -b firefox",
    "zip": "wxt zip",
    "zip:firefox": "wxt zip -b firefox",
    "check": "svelte-check --tsconfig ./tsconfig.json",
    "postinstall": "wxt prepare"
  },
  "devDependencies": {
    "@tsconfig/svelte": "^5.0.4",
    "@wxt-dev/module-svelte": "^2.0.3",
    "nodemon": "^3.1.10",
    "svelte": "^5.28.2",
    "svelte-check": "^4.1.6",
    "tslib": "^2.8.1",
    "typescript": "^5.8.3",
    "webextension-polyfill": "^0.12.0",
    "wxt": "^0.20.6"
  },
  "dependencies": {
    "@wxt-dev/webextension-polyfill": "^1.0.0"
  }
}
